<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >


    <RelativeLayout
        android:background="@color/primaryColor"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <include
            android:id="@+id/include"
            layout="@layout/firstfragment_tb1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/include"
            android:layout_marginTop="12dp"
            android:background="@drawable/homebackground"
            android:orientation="vertical">


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">




                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginRight="16dp">





                    <LinearLayout

                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <ImageView
                            android:src="@drawable/announce"
                            android:layout_gravity="top|center"
                            android:layout_width="220dp"
                            android:layout_height="220dp"/>




                        <TextView
                            android:fontFamily="@font/demibold"
                            android:layout_marginTop="12dp"
                            android:id="@+id/txt3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/rl3"
                            android:text="Notification"
                            android:textSize="18sp" />

                        <RelativeLayout

                            android:layout_below="@+id/txt3"
                            android:layout_marginTop="12dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                           <LinearLayout
                               android:id="@+id/n_lnr"
                               android:layout_width="match_parent"
                               android:layout_height="match_parent">

                               <LinearLayout
                                   android:layout_marginBottom="10dp"
                                   android:layout_gravity="left|center_vertical"
                                 android:background="@drawable/dot"
                                   app:cardCornerRadius="50dp"
                                   android:layout_width="10dp"
                                   android:layout_height="10dp">

                               </LinearLayout>
                               <TextView
                                   android:fontFamily="@font/medium"
                                   android:layout_marginLeft="8dp"
                                   android:text="സെറ്റിംഗ്സ് മെനുവിൽ നിന്നും പ്രിൻറർ സെലക്ട് ചെയുക"                               android:layout_width="match_parent"
                                   android:layout_height="wrap_content">

                               </TextView>








                           </LinearLayout>
                            <LinearLayout
                                android:layout_marginTop="16dp"
                                android:layout_below="@+id/n_lnr"
                                android:id="@+id/n_lnr1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <LinearLayout
                                    android:layout_marginBottom="4dp"
                                    android:layout_gravity="left|center_vertical"
                                    android:background="@drawable/dot"
                                    app:cardCornerRadius="50dp"
                                    android:layout_width="10dp"
                                    android:layout_height="10dp">

                                </LinearLayout>
                                <TextView
                                    android:fontFamily="@font/medium"
                                    android:layout_marginLeft="8dp"
                                    android:text="ദിവസേന ഡാറ്റ നിർബന്ധമായും import ചെയുക. "
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                </TextView>








                            </LinearLayout>
                            <LinearLayout
                                android:layout_marginTop="16dp"
                                android:layout_below="@+id/n_lnr1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <LinearLayout
                                    android:layout_marginBottom="4dp"
                                    android:layout_gravity="left|center_vertical"
                                    android:background="@drawable/dot"
                                    app:cardCornerRadius="50dp"
                                    android:layout_width="10dp"
                                    android:layout_height="10dp">

                                </LinearLayout>
                                <TextView
                                    android:fontFamily="@font/medium"
                                    android:layout_marginLeft="8dp"
                                    android:text="ദിവസേന ഡാറ്റ നിർബന്ധമായും export ചെയുക."
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                </TextView>








                            </LinearLayout>

                        </RelativeLayout>
                        <com.skydoves.elasticviews.ElasticButton
                            android:fontFamily="@font/semibold"
                            android:text="Next"
                            android:onClick="next_"
                            android:textColor="#ffffff"
                            android:layout_marginTop="24dp"
                            android:background="@drawable/all_button"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="45dp"/>


                    </LinearLayout>








                </RelativeLayout>


            </ScrollView>





        </LinearLayout>
    </RelativeLayout>










</RelativeLayout>