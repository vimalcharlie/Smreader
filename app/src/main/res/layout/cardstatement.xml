            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:fontFamily="@font/semibold"
                android:layout_marginRight="4dp"
                android:id="@+id/txt_name"
                android:textSize="15sp"
                android:textFontWeight="600"
