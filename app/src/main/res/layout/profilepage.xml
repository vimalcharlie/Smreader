<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root_rl"
    android:background="@color/primaryColor2"
    tools:context=".reading.ReadProfile">

    <LinearLayout
        android:id="@+id/lnr1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include
            layout="@layout/toolbar"/>
    </LinearLayout>


    <ScrollView
        android:layout_below="@+id/lnr1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout

            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_margin="8dp"
                app:cardCornerRadius="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="24dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="8dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:src="@drawable/user"
                                android:id="@+id/imv"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_width="40dp"
                                android:layout_height="40dp"/>

                            <TextView
                                android:fontFamily="@font/demibold"
                                android:id="@+id/txt_name"
                                android:textSize="15sp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toEndOf="@id/imv"
                                android:text="Syed P"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>










                        </androidx.constraintlayout.widget.ConstraintLayout>





                    </LinearLayout>





                    <LinearLayout
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="28dp"
                        android:layout_marginRight="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <LinearLayout


                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:src="@drawable/profilephone"
                                    android:id="@+id/imv1"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"/>

                                <TextView
                                    android:fontFamily="@font/medium"
                                    android:layout_marginLeft="8dp"
                                    android:id="@+id/txtphone"
                                    android:textSize="13sp"
                                    app:layout_constraintTop_toTopOf="parent"

                                    app:layout_constraintStart_toEndOf="@id/imv1"
                                    android:text="Phone number"
                                    android:textColor="#80000000"

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>


                                <ImageView
                                    android:visibility="gone"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    android:src="@drawable/editicon"
                                    android:id="@+id/editimv"

                                    app:layout_constraintTop_toTopOf="parent"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"/>
                                <TextView
                                    android:fontFamily="@font/demibold"

                                    android:layout_marginTop="3dp"
                                    android:layout_marginLeft="8dp"
                                    android:id="@+id/txtphone2"
                                    android:textSize="15sp"

                                    app:layout_constraintTop_toBottomOf="@+id/txtphone"
                                    app:layout_constraintStart_toEndOf="@id/imv1"
                                    android:text="7878653789"
                                    android:textColor="#000000"

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <View
                                    android:layout_marginLeft="16dp"
                                    android:layout_marginTop="8dp"
                                    app:layout_constraintStart_toEndOf="@+id/imv1"
                                    app:layout_constraintTop_toBottomOf="@+id/txtphone2"
                                    android:layout_width="match_parent"
                                    android:background="#33000000"
                                    android:layout_height="1dp"/>








                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_marginTop="12dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:src="@drawable/profileaddress"
                                    android:id="@+id/imvadd"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"/>

                                <TextView
                                    android:fontFamily="@font/medium"
                                    android:layout_marginLeft="8dp"
                                    android:id="@+id/txtaddress"
                                    android:textSize="13sp"
                                    app:layout_constraintTop_toTopOf="parent"

                                    app:layout_constraintStart_toEndOf="@id/imvadd"
                                    android:text="Address"
                                    android:textColor="#80000000"

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>



                                <TextView
                                    android:fontFamily="@font/demibold"
                                    android:layout_marginTop="3dp"
                                    android:layout_marginLeft="8dp"
                                    android:id="@+id/txtaddress2"
                                    android:textSize="15sp"

                                    app:layout_constraintTop_toBottomOf="@+id/txtaddress"
                                    app:layout_constraintStart_toEndOf="@id/imvadd"
                                    android:text="National Highway 66 near Calicut University Kakkanchery Chelembra PO, Dt, Thenhipalam, Kerala 673634"
                                    android:textColor="#000000"

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>

                                <View
                                    android:layout_marginLeft="16dp"
                                    android:layout_marginTop="8dp"
                                    app:layout_constraintStart_toEndOf="@+id/imvadd"
                                    app:layout_constraintTop_toBottomOf="@+id/txtaddress2"
                                    android:layout_width="match_parent"
                                    android:background="#33000000"
                                    android:layout_height="1dp"/>








                            </androidx.constraintlayout.widget.ConstraintLayout>



                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_marginTop="12dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:src="@drawable/profilemail"
                                    android:id="@+id/imvarea"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"/>

                                <TextView
                                    android:fontFamily="@font/medium"
                                    android:layout_marginLeft="8dp"
                                    android:id="@+id/txtarea"
                                    android:textSize="13sp"
                                    app:layout_constraintTop_toTopOf="parent"

                                    app:layout_constraintStart_toEndOf="@id/imvarea"
                                    android:text="Email"
                                    android:textColor="#80000000"

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>



                                <TextView
                                    android:fontFamily="@font/demibold"
                                    android:layout_marginTop="3dp"
                                    android:layout_marginLeft="8dp"
                                    android:id="@+id/txtarea2"
                                    android:textSize="15sp"

                                    app:layout_constraintTop_toBottomOf="@+id/txtarea"
                                    app:layout_constraintStart_toEndOf="@id/imvarea"
                                    android:text="Syed001@gmail.com"
                                    android:textColor="#000000"

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>










                            </androidx.constraintlayout.widget.ConstraintLayout>



                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_marginTop="12dp"
                                android:id="@+id/imcsignout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/imv"

                                    android:src="@drawable/signout"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"/>

                                <TextView
                                    android:fontFamily="@font/demibold"
                                    android:layout_marginLeft="8dp"
                                    android:id="@+id/txtsingout"
                                    android:textSize="15sp"
                                    app:layout_constraintTop_toTopOf="parent"

                                    app:layout_constraintStart_toEndOf="@id/imv"
                                    android:text="Sign out"
                                    android:textColor="#000000"

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>



                                <ImageView
                                    android:onClick="signout"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    android:src="@drawable/signoutarrow"


                                    app:layout_constraintTop_toTopOf="parent"
                                    android:layout_width="7dp"
                                    android:layout_height="12dp"/>










                            </androidx.constraintlayout.widget.ConstraintLayout>





                        </LinearLayout>




                    </LinearLayout>


                </LinearLayout>










            </androidx.cardview.widget.CardView>











        </LinearLayout>





    </ScrollView>






</RelativeLayout>