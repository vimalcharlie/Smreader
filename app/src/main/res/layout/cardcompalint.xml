<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="12dp"
    android:elevation="8dp"
    android:id="@+id/root_Rl"
    android:background="@drawable/reybg1"



    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout


        android:layout_width="match_parent"
        android:layout_height="93sp">

        <LinearLayout
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/lnr1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"


            app:layout_constraintStart_toStartOf="parent"
            >
            <ImageView
                android:src="@drawable/personicon"
                android:layout_marginLeft="8dp"
                android:layout_width="40dp"
                android:layout_height="40dp"/>

        </LinearLayout>



        <LinearLayout
            android:layout_weight="1"
            android:layout_marginLeft="4dp"
            android:orientation="vertical"
            android:gravity="left|center"
            app:layout_constraintStart_toEndOf="@+id/lnr1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:fontFamily="@font/semibold"
                    android:textSize="12sp"
                    android:textColor="#191206"
                    android:text="Consumer no  ."
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
                <TextView
                    android:fontFamily="@font/medium"
                    android:id="@+id/txt_consumer"
                    android:textSize="10sp"
                    android:textColor="#191206"
                    android:text="263839"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>



            </LinearLayout>


            <LinearLayout
                android:gravity="center"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">





                <TextView
                    android:fontFamily="@font/semibold"

                    android:textSize="12sp"
                    android:textColor="#191206"
                    android:text="Complaint ."
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
                <TextView
                    android:fontFamily="@font/medium"
                    android:id="@+id/txt1"
                    android:textSize="10sp"
                    android:textColor="#191206"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>



            </LinearLayout>




        </LinearLayout>

        <LinearLayout
            android:layout_marginRight="12dp"
            android:orientation="vertical"
            android:gravity="center|right"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:fontFamily="@font/demibold"

                android:text="Date"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:fontFamily="@font/medium"
                android:id="@+id/txt2"
                android:textSize="10sp"
                android:text="10-02-2022"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>


    </LinearLayout>


</RelativeLayout>