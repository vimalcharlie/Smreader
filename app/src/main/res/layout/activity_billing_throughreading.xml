<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/root_Rl"
    android:background="@color/primaryColor2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/lnr"
        android:orientation="vertical"
        android:background="@color/primaryColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginLeft="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_marginTop="18dp"

                android:id="@+id/lnr1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="19dp"
                    android:layout_height="19.029dp"
                    android:src="@drawable/goback" />


            </LinearLayout>



            <LinearLayout


                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:id="@+id/lnr2"
                app:layout_constraintTop_toBottomOf="@+id/lnr1"
                android:layout_width="match_parent"
                android:layout_height="42dp" >
                <androidx.cardview.widget.CardView
                    android:id="@+id/crdview"
                    android:layout_weight="1   "


                    android:layout_marginRight="12dp"
                    app:cardCornerRadius="20dp"


                    android:layout_width="0dp"
                    android:layout_height="42dp">
                    <LinearLayout
                        android:layout_gravity="center"
                        android:gravity="center"

                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <EditText
                            android:fontFamily="@font/medium"
                            android:inputType="number"
                            android:imeOptions="actionDone"
                            android:id="@+id/Et_received_amt"
                            android:layout_marginLeft="20dp"
                            android:layout_weight=".5"
                            android:layout_width="0dp"
                            android:layout_height="23dp"
                            android:background="@android:color/transparent"
                            android:layout_alignParentLeft="true"



                            android:hint="Enter the received amount"

                            android:gravity="center|left"
                            />


                        <LinearLayout
                            android:background="#E3A735"
                            android:layout_weight=".15"
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">

                            <ImageView
                                android:src="@drawable/readinggo"
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentBottom="true"

                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="13dp"
                                />

                        </LinearLayout>



                    </LinearLayout>



                </androidx.cardview.widget.CardView>






            </LinearLayout>





        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="16dp"/>








    </LinearLayout>
    <ScrollView
        android:layout_below="@+id/lnr"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="12dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="6dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="148dp">
                    <RelativeLayout
                        android:layout_margin="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:src="@drawable/billamount"
                            android:layout_width="35.5117dp"
                            android:layout_height="24dp"/>


                        <LinearLayout
                            android:layout_alignParentBottom="true"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:fontFamily="@font/demibold"
                                android:text="Bill amount"
                                android:textSize="15dp"
                                android:textColor="#6D6D6D"
                                android:textFontWeight="500"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>



                            <TextView
                                android:fontFamily="@font/normal"
                                android:id="@+id/txtBillAmt"
                                android:layout_marginTop="4dp"
                                android:text="345"
                                android:textSize="27sp"
                                android:textColor="#0052EE"
                                android:textFontWeight="500"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>







                        </LinearLayout>





                    </RelativeLayout>






                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="12dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="16dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="148dp">

                    <RelativeLayout
                        android:layout_margin="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:src="@drawable/balance"
                            android:layout_width="25dp"
                            android:layout_height="25dp"/>


                        <LinearLayout
                            android:layout_alignParentBottom="true"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text="Balance"
                                android:fontFamily="@font/demibold"
                                android:textSize="15dp"
                                android:textColor="#6D6D6D"
                                android:textFontWeight="500"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>



                            <TextView
                                android:fontFamily="@font/normal"
                                android:id="@+id/balance"
                                android:layout_marginTop="4dp"
                                android:text=""
                                android:textSize="27sp"
                                android:textColor="#0052EE"
                                android:textFontWeight="500"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>







                        </LinearLayout>





                    </RelativeLayout>





                </androidx.cardview.widget.CardView>







            </LinearLayout>




            <androidx.cardview.widget.CardView

                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="2dp"
                app:cardCornerRadius="12dp"
                android:elevation="3dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="16dp"
                    android:orientation="vertical">




                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:fontFamily="@font/demibold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lineSpacingExtra="-1sp"
                            android:text="Previous Amount"
                            android:textSize="14sp" />


                        <TextView
                            android:fontFamily="@font/regular"
                            android:id="@+id/txt_pre_amt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="₹270"
                            android:textColor="#000000"
                            android:textSize="14sp" />


                    </RelativeLayout>



                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp">

                        <TextView
                            android:fontFamily="@font/demibold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lineSpacingExtra="-1sp"

                            android:text="Additional Amount"
                            android:textSize="14sp" />


                        <TextView
                            android:id="@+id/txt_add_amt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="₹0"
                            android:fontFamily="@font/regular"
                            android:textSize="12sp" />


                    </RelativeLayout>

                    <View
                        android:layout_marginTop="8dp"
                        android:background="#33000000"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        />






                    <RelativeLayout
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:fontFamily="@font/demibold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lineSpacingExtra="-1sp"

                            android:text="Service Charges"
                            android:textSize="14sp" />


                        <TextView
                            android:id="@+id/amt_service_amt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:fontFamily="@font/regular"
                            android:text="₹2709"
                            android:textSize="12sp" />


                    </RelativeLayout>



                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp">

                        <TextView
                            android:fontFamily="@font/demibold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lineSpacingExtra="-1sp"

                            android:text="Fine"
                            android:textSize="14sp" />


                        <TextView
                            android:id="@+id/txt_fine"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="₹2700"
                            android:fontFamily="@font/regular"
                            android:textSize="12sp" />


                    </RelativeLayout>


















                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="80dp"
                android:layout_height="80dp"/>








        </LinearLayout>



    </ScrollView>


    <LinearLayout
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.skydoves.elasticviews.ElasticButton
            android:layout_marginTop="8dp"
            android:onClick="nextpageTakeReading"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/all_button"
            android:layout_width="match_parent"
            android:text="Next"
            android:fontFamily="@font/semibold"
            android:id="@+id/bt_next"
            android:textColor="@color/white"
            android:layout_height="48dp"/>






    </LinearLayout>





</RelativeLayout>